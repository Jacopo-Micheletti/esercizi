PROG main
	ASSIGN cont = 1
	IN n
	IN max
	FOR i=0; i < n-1; i=i+1
		IN num
		IF num > max
			ASSIGN max = num
			ASSIGN cont = 1
		ELSE //if num > max
			IF max == num
				ASSIGN cont = cont +1
			ELSE //if max == num
			END IF //max == num
		END IF //num > max
	END FOR //i=0; i < n-1; i=i+1
	OUT max
	OUT cont
END PROG //main
