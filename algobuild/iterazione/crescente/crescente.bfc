PROG main
	ASSIGN crescente = 1
	IN N
	IN precedente
	FOR i = 0; i < N - 1; i = i+1
		IN valore
		IF precedente > valore
			ASSIGN crescente = 0
		ELSE //if precedente > valore
		END IF //precedente > valore
		ASSIGN precedente = valore
	END FOR //i = 0; i < N - 1; i = i+1
	IF crescente == 0
		OUT "La sequenza non è crescente"
	ELSE //if crescente == 0
		OUT "La sequenza è crescente"
	END IF //crescente == 0
END PROG //main
